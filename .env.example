# ============================================
# Configuración de Django - EventSoft
# ============================================
# Copia este archivo como .env y configura los valores

# ============================================
# Configuración de Django
# ============================================
SECRET_KEY=tu-clave-secreta-muy-larga-y-segura-aqui
DEBUG=False
ALLOWED_HOSTS=tu-usuario.pythonanywhere.com

# ============================================
# Base de Datos - Desarrollo Local (MySQL)
# ============================================
# DB_NAME=eventsoft
# DB_USER=root
# DB_PASSWORD=tu_password
# DB_HOST=localhost
# DB_PORT=3306

# ============================================
# Base de Datos - Producción (PythonAnywhere)
# ============================================
MYSQL_DATABASE=tu_usuario$eventsoft
MYSQL_USER=tu_usuario
MYSQL_PASSWORD=tu_password_mysql
MYSQL_HOST=tu_usuario.mysql.pythonanywhere-services.com
MYSQL_PORT=3306

# ============================================
# Email - Opción 1: SMTP (para desarrollo)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_app_password
DEFAULT_FROM_EMAIL=tu_email@gmail.com

# ============================================
# Email - Opción 2: Brevo API (para producción)
# ============================================
# Si configuras BREVO_API_KEY, se usará Brevo en lugar de SMTP
# Esto es necesario en PythonAnywhere free tier
# BREVO_API_KEY=xkeysib-tu-api-key-aqui
